<h1>Books</h1>



<table>
    <thead>
        <tr>
            <th>Title</th>
            <th class="line">Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
                <div class="link">
                <%= link_to "Show", book_path(book.id) %>
                <%= link_to "Edit", edit_book_path(book.id) %>
                <%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
                </div>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>







<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: Book.new do |f| %>

<h6 class="title">Title</h6>
<%= f.text_field :title %>

<h6 class="body">Body</h6>
<%= f.text_area :body %>

<div class="submit">
<%= f.submit 'Create Book' %>
</div>
<% end %>


<% if flash[:notice] %>
<p id="notice">
    <%= flash[:notice] %>
</p>

<% end %>